<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="5dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="Sections"
            android:textSize="17dp"
            android:editable="false"
            android:textColor="#ff3e4b54"
            android:paddingTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:textIsSelectable="false"
            android:theme="@style/Base.AlertDialog.AppCompat.Light"
            android:longClickable="true"
            android:clickable="true"
            android:layout_marginBottom="0dp"
            android:elegantTextHeight="false"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="5dp"
            android:paddingRight="3dp"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:capitalize="words"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Created Date"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_below="@+id/textView"
            android:textColor="#ff277186"
            android:textSize="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Modified Date"
            android:id="@+id/textView3"
            android:textColor="#ff327a56"
            android:textSize="9dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="+"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"
            android:layout_marginRight="3dp"
            android:textSize="13dp"
            android:textStyle="italic"
            android:textColor="#ff277186" />

        <TextView
            tools:ignore="RtlCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="~"
            android:id="@+id/textView5"
            android:textSize="13dp"
            android:textStyle="italic"
            android:textColor="#ff327a56"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3"
            android:layout_marginRight="3dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sectionSubItemDetailVLayout"
        android:orientation="vertical"
        android:layout_below="@+id/relativeLayout"
        android:layout_toRightOf="@+id/sectionSubItemDetailVLayout"
        android:layout_toEndOf="@+id/sectionSubItemDetailVLayout"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp" >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sectionSubItemDetailVScrollView">


        </ScrollView>

    </LinearLayout>




</RelativeLayout>