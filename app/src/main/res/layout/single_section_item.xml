<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noteTittle"
        android:text="Sections"
        android:textSize="17dp"
        android:textColor="#ff3e4b54"
        android:paddingTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"
        android:layout_marginBottom="0dp"
        android:focusable="true"
        android:paddingBottom="5dp"
        android:paddingRight="3dp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:capitalize="words"
        android:layout_centerInParent="true"
        android:editable="true"
        android:longClickable="true"
        android:clickable="true"
        android:enabled="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Created Date"
            android:id="@+id/createdDate"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/noteTittle"
            android:layout_alignEnd="@+id/noteTittle"
            android:layout_below="@+id/noteTittle"
            android:textColor="#ff277186"
            android:textSize="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Modified Date"
            android:id="@+id/modifiedDate"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/noteTittle"
            android:textColor="#ff327a56"
            android:textSize="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="+"
            android:id="@+id/createdSymbol"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/createdDate"
            android:layout_toStartOf="@+id/createdDate"
            android:layout_marginRight="3dp"
            android:textSize="13dp"
            android:textStyle="italic"
            android:textColor="#ff277186" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="~"
            android:id="@+id/modifiedSymbol"
            android:layout_alignParentBottom="false"
            android:layout_toStartOf="@+id/modifiedDate"
            android:layout_below="@+id/noteTittle"
            android:layout_marginRight="3dp"
            android:textSize="13dp"
            tools:ignore="RtlCompat"
            android:textStyle="italic"
            android:textColor="#ff327a56" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sectionSubItemHList"
            android:layout_alignBottom="@+id/modifiedSymbol"
            android:layout_alignLeft="@+id/noteTittle"
            android:layout_alignStart="@+id/noteTittle"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sectionSubItemHListLayout"
                android:orientation="horizontal">


            </LinearLayout>


        </HorizontalScrollView>

    </RelativeLayout>

</RelativeLayout>

